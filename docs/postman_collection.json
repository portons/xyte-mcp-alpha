{
  "info": {
    "name": "Xyte MCP API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Devices",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/devices"
      }
    },
    {
      "name": "Send Command",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/devices/{{device_id}}/commands",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"reboot\",\n  \"friendly_name\": \"Reboot\"\n}"
        }
      }
    }
  ]
}
